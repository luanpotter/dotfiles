# theme and style
macos-titlebar-style = hidden

## remap macos "command" keys to "control" commands on tmux

# new tab
keybind = cmd+t=ignore
keybind = cmd+t=text:\x14

# close tab
keybind = cmd+w=ignore
keybind = cmd+w=text:\x17

# r-search
keybind = cmd+r=ignore
keybind = cmd+r=text:\x12

# clear
keybind = cmd+l=ignore
keybind = cmd+l=text:\x0C

# ctrl+c
keybind = cmd+c=ignore
keybind = cmd+c=text:\x03

# ctrl+d
keybind = cmd+d=ignore
keybind = cmd+d=text:\x04

# tab switching with single keybind
keybind = cmd+digit_1=text:\x02\x30
keybind = cmd+digit_2=text:\x02\x31
keybind = cmd+digit_3=text:\x02\x32
keybind = cmd+digit_4=text:\x02\x33
keybind = cmd+digit_5=text:\x02\x34
keybind = cmd+digit_6=text:\x02\x35
keybind = cmd+digit_7=text:\x02\x36
keybind = cmd+digit_8=text:\x02\x37
keybind = cmd+digit_9=text:\x02\x38

keybind = performable:cmd+c=copy_to_clipboard
keybind = performable:cmd+v=paste_from_clipboard
